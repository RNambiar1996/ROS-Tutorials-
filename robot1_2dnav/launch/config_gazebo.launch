<?xml version="1.0"?>

<launch>
	<param name="/use_sim_time" value="true"/>
	<remap from="robot/laser/scan" to="/scan" />
	<!-- launch world file -->
	<include file="$(find gazebo_ros)/launch/willowgarage_world.launch"/>

	<arg name="model" default="$(find robot1_description)/urdf/robot1_base.xacro"/>
		<param name="robot_description" command="$(find xacro)/xacro.py $(arg model)" />

	<node name="state1_publisher_tutorials" pkg="robot1_description" type="state_publisher_tutorials"/>
	
	<!--start robot state publisher -->

	<node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen"/>

	<node name="spawn_robot" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -z 0.1 -model robot_model" respawn="false" output="screen"/>

	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find robot1_2dnav)/launch/navigation.rviz"/>

</launch>
